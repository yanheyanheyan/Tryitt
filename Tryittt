  <div id="product-journey">
    <div class="step" onclick="showDetails(0)">
      <img src="img/farm.jpg" alt="种植">
      <p>1. 种植</p>
    </div>
    <div class="step" onclick="showDetails(1)">
      <img src="img/harvest.jpg" alt="采摘">
      <p>2. 采摘</p>
    </div>
    <div class="step" onclick="showDetails(2)">
      <img src="img/transport.jpg" alt="运输">
      <p>3. 运输</p>
    </div>
    <div class="step" onclick="showDetails(3)">
      <img src="img/store.jpg" alt="销售">
