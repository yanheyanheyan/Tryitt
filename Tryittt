  <div id="detail-box">
    <h2>点击上方任一步骤，了解详细旅程</h2>
  </div>

  <script>
    const steps = [
      {
        title: "种植阶段",
        content: "在春天，农民在田地里播下西红柿种子，采用滴灌节水和轮作种植，提升土壤健康。",
        media: "videos/farm.mp4"
      },
      {
        title: "采摘阶段",
        content: "成熟的西红柿由人工精心采摘，确保果实完整、不被损伤，随后装箱。",
        media: "img/harvest-detail.jpg"
      },
      {
        title: "运输阶段",
        content: "使用冷链物流将西红柿运输至城市，减少腐损，提升新鲜度。",
        media: "videos/transport.mp4"
      },
      {
        title: "销售阶段",
        content: "西红柿进入超市货架，消费者通过扫码可追溯产地和运输路径。",
        media: "img/store-detail.jpg"
      }
    ];

    function showDetails(index) {
      const step = steps[index];
      const mediaTag = step.media.endsWith(".mp4")
        ? `<video src="${step.media}" controls></video>`
        : `<img src="${step.media}">`;
      document.getElementById("detail-box").innerHTML = `
        <h2>${step.title}</h2>
        <p>${step.content}</p>
        ${mediaTag}
      `;
    }
  </script>
